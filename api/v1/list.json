---
layout: none
---
[
{%- assign applist = site.apps | sort: 'title' -%}
{%- for app in applist -%}
{%- assign app_url = app.url | absolute_url  -%}
{% if app.disabled %}
  {% continue %}
{% endif %}
{
  "id": "{{ app.appid }}",
  "name": "{{ app.title }}",
  "icon": "{{ app.icon }}",
  "summary": "{{ app.excerpt }}",
  "url": "{{ app.url | absolute_url  }}",

  "requires": "{{ app.requires }}",
  "category": "{{ app.category }}",
  "website": "{{ app.home }}",
  "developer": "{{ app.developer }}",

  "screenshots": [
{%- for img in app.screenshots %}
    {
      "image": "{{ img.url }}",
      "type": "desktop"
    },
{%- endfor %}
  ],
  "source": {
    "git": "{{ app.git }}",
    "package": "{{ app.package }}"
  },
  "version": "{{ app.version }}",
  "date": "{{ app.date | date_to_xmlschema }}"
} 
{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}
]
